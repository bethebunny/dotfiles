{
    "languages": {
        "Python": {
            "format_on_save": "on",
            "formatter": [
                {
                    "code_actions": {
                        "source.organizeImports.ruff": true,
                        "source.fixAll.ruff": true
                    }
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ],
            "language_servers": ["ruff", "!ty"]
        },
        "C++": {
            "formatter": "language_server",
            "format_on_save": "on"
        },
        "Mojo": {
            "language_servers": [
                "bazel-bin/KGEN/tools/mojo-lsp-server/mojo-lsp-server"
            ]
        }
    },
    "lsp": {
        "clangd": {
            "settings": {
                "binary": "/usr/bin/clangd",
                "arguments": ["--compile-commands-dir=/home/ubuntu/modular"]
            }
        },
        "starpls": {
            "settings": {
                "args": {
                    "bazel_plath": "~/modular/bazelw",
                    "experimental_enable_label_completions": true
                }
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    // Ruff server settings goes here
                    "lineLength": 80
                }
            }
        },
        "pylsp": {
            "binary": {
                "path": "/home/ubuntu/modular/.venv/bin/pylsp"
            },
            "settings": {
                "pylsp": {
                    "plugins": {
                        "pylsp_mypy": {
                            "enabled": true,
                            "config_file": "/home/ubuntu/modular/pyproject.toml",
                            "overrides": [
                                "--python-path=/home/ubuntu/modular/max/python",
                                true
                            ]
                        }
                    }
                }
            }
        }
    }
}
